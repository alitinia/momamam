<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tes.alitinia.momamam.InformationFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="PHONE"
            android:textColor="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/phone" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="021 29464916"
            android:ems="10"
            android:id="@+id/number" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="CUISINE"
            android:textColor="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/cuisine" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Japanese, Sushi, Ramen"
            android:ems="10"
            android:id="@+id/cuisinetype" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="TYPE"
            android:textColor="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/type" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Casual Dining"
            android:ems="10"
            android:id="@+id/casual" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="AVERAGE COST"
            android:textColor="@android:color/darker_gray"
            android:ems="10"
            android:id="@+id/average" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Rp. 200000 for two"
            android:ems="10"
            android:id="@+id/cost" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/address"
                android:id="@+id/address"
                android:scaleType="fitStart"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                />
    </LinearLayout>


</LinearLayout>
